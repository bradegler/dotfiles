#!/bin/sh

export SVN_EDITOR=vi
export GDK_NATIVE_WINDOWS=1

export PS1="\
[\[$prompt_device_color\]\h\[$prompt_reset\]][\[$prompt_direct_color\]\w\[$prompt_reset\]]\
\$( is_on_git && \
  echo -n \"[\[$prompt_git_master_color\]\$(get_git_info_master)\" && \
  echo -n \"\[$prompt_git_branch_color\]\$(get_git_info_branch)\" && \
  echo -n \"\[$prompt_git_status_color\]\$(get_git_status)\" && \
  echo -n \"\[$prompt_git_progress_color\]\$(get_git_progress)\" && \
  echo -n \"\[$prompt_preposition_color\]]\")\[$prompt_reset\]\
$ "

case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;\h: \w\a\]$PS1"
    ;;
*)
    ;;
esac

export JAVA_HOME=/opt/dev/tools/java/current
export ANT_HOME=/opt/dev/tools/apache-ant-1.9.7
export ORACLE_HOME=/data/tools/oracle/11_2
export GROOVY_HOME=/data/tools/groovy-2.3.7
export GRADLE_HOME=/opt/dev/tools/gradle-3.0
export SCALA_HOME=/data/tools/scala-2.11.4
export GOROOT=/data/tools/go

export SQLPATH=$ORACLE_HOME/bin
export LD_LIBRARY_PATH=$ORACLE_HOME/bin
