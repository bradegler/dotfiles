	clean = \"/Users/bradegler/.pyenv/versions/3.11.2/bin/python3\" -m nbstripout
	smudge = cat
[diff "ipynb"]
	textconv = \"/Users/bradegler/.pyenv/versions/3.11.2/bin/python3\" -m nbstripout -t
[pager]
	branch = true
