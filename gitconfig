	helper = cache
[filter "lfs"]
	process = git-lfs filter-process
	required = true
[filter "stripuser"]
[http]
[init]
	defaultBranch = main
[credential "https://source.developers.google.com"]
	helper = gcloud.sh
[credential "https://github.com"]
	helper = 
	helper = !/usr/local/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/local/bin/gh auth git-credential
[gpg]
	format = ssh
